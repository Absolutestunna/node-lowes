<!doctype html>
<html lang="en">
   <head>
      <meta charset="utf-8">
      <meta name="description" content="Lowe's Assessment">
      <title>[JOSHUA ABU] - Interview Test</title>
      <link rel='stylesheet' href='/css/reset.css' />
      <link rel='stylesheet' href='/css/index.css' />
      <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600" rel="stylesheet">

   </head>
   <body>


     <div class="selected-product" id="sel-product"
       data-productPrice="<%= productList[0].pricing.price.selling %>"
       data-productDescription="<%= productList[0].description %>"
       data-productID="<%=productList[0].productId%>"
      >
       <div class="product-image">
         <img src="<%= productList[0].imageUrls.xl %>" alt="<%= productList[0].brand %>">
       </div>
       <div class="product-description">

          <h3><%= productList[0].description %></h3>

          <ul>

              <% productList[0].marketingBullets.forEach((point) => { %>
                  <li><p><%=  point  %></p></li>
              <% }) %>

          </ul>

       </div>
       <div class="product-price">

         <h1>&#36;<%= parseInt(productList[0].pricing.price.selling).toLocaleString() %></h1>
         <button type="button" name="cart" id="cart">ADD TO CART</button>
       </div>
    </div>


    <div class="product-items-container">

      <% productList.forEach((product) => { %>
        <div class='product-item' data-productid="<%= product.productId %>">
          <div class="product-thumb-image">
            <img src="<%= product.imageUrls.lg %>" alt="<%= product.brand %>">

          </div>
          <div class="">
            <div class="product-thumb-description">
              <p>
                <%=  product.description %>
              </p>
            </div>
            <div class="product-thumb-price">
              <p>&#36;<%= parseInt(product.pricing.price.selling).toLocaleString() %></p>
            </div>
            <button type="button" name="view-more-button" class="view-more-button">VIEW MORE</button>

          </div>

        </div>
      <% }) %>

    </div>







      <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
      <script type="text/javascript" src="/js/index.js"></script>

   </body>
</html>
